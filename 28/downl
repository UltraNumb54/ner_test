from transformers import AutoModelForTokenClassification, AutoTokenizer

# Укажите правильный путь к папке с моделью
model_path = "/путь/к/вашей/модели/bert-base-multilingual-cased"

# Загрузка с использованием только локальных файлов
try:
    tokenizer = AutoTokenizer.from_pretrained(model_path, local_files_only=True)
    model = AutoModelForTokenClassification.from_pretrained(model_path, local_files_only=True)
    print("Модель и токенизатор успешно загружены локально")
except Exception as e:
    print(f"Ошибка при загрузке локальных файлов: {e}")


try:
    # Попытка загрузить модель из стандартного кэша
    tokenizer = AutoTokenizer.from_pretrained("bert-base-multilingual-cased")
    model = AutoModelForTokenClassification.from_pretrained("bert-base-multilingual-cased")
    print("Модель присутствует в кэше.")
except Exception as e:
    print(f"Модель не найдена в кэше. Ошибка: {e}")
